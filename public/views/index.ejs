<form id='contact-form' action="/newResource" method="POST" class="new-resource" style="
  flex-wrap: wrap;">
  <h2 class="create_resource-title">Create your own resource</h2>
  <div class="content">
    <div class="title-URL-container">
      <div class="title-container">
        <label for="title" class="title-text">Title: </label>
        <input type="text" class="title-input">
      </div>
      <div class="URL-container">
        <label for="link" class="URL-text">URL: </label>
        <input type="text" class="link-input">
      </div>
    </div>
        <div class="screenshot-category-container">
          <div class="screenshot-container">
            <label for="screenshotUrl" class="screenshot-text">Screenshot URL: </label>
            <input type="text" class="screenshotUrl-input">
          </div>
          <div class="category-container">
            <label for="category">Category: </label>
            <select class="category-input">
              <option value="1">Science</option>
              <option value="2">News</option>
              <option value="3">Arts &amp; Entertainment</option>
              <option value="4">Sports</option>
              <option value="5">Health</option>
              <option value="6">Work</option>
              <option value="7">Hobbies</option>
              <option value="8">Nature</option>
              <option value="9">Music</option>
              <option value="10">Literature</option>
              <option value="11">Misc</option>
            </select>
          </div>
        </div>
        <div class="description-submit-container">
          <div class="description-container">
            <label for="description">Description: </label>
            <input type="text" class="description-input">
          </div>
        <div class="submit-container">
          <button type="submit" class="new_resource-button">Submit</button>
        </div>
      </div>
    </div>
  </form>
  <main>
    <div class="display">
    </div>
    <button onclick="topFunction()" id="myBtn" title="Go to top">Top</button>
    <script>
      //Get the button
      var mybutton = document.getElementById("myBtn");
      
      // When the user scrolls down from the top of the document, show the button
      window.onscroll = function() {scrollFunction()};
      
      function scrollFunction() {
        if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
          mybutton.style.display = "block";
        } else {
          mybutton.style.display = "none";
        }
      }
      
      // When the user clicks on the button, scroll to the top of the document
      function topFunction() {
        document.body.scrollTop = 0;
        document.documentElement.scrollTop = 0;
      }
      </script>
  </main>
</body>

